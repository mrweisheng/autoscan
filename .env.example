# 服务器配置
PORT=5000
HOST=0.0.0.0

# MongoDB配置
MONGODB_URI=mongodb://username:password@localhost:27017/dbname
MONGODB_POOL_SIZE_MAX=10
MONGODB_POOL_SIZE_MIN=5
MONGODB_TIMEOUT_MS=30000
MONGODB_IDLE_TIME_MS=30000
MONGODB_QUEUE_TIMEOUT_MS=10000

# 日志配置
LOG_LEVEL=debug
LOG_FILE=auto_login.log

# 业务配置
INACTIVE_DAYS=12

# 文件清理配置
# 清理间隔，单位毫秒，0表示不自动清理
FILE_CLEANUP_INTERVAL=86400000
# 文件最大保存时间，单位毫秒，0表示永久保存
FILE_MAX_AGE=604800000

# 邮件服务配置 - SMTP方式
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your.email@gmail.com
# EMAIL_PASS=your-app-password
# EMAIL_FROM="Your App Name <your.email@gmail.com>"

# Postmark API配置 (国际用户推荐)
# POSTMARK_API_TOKEN=your-postmark-api-token
# EMAIL_FROM=your.verified@email.com

# 阿里云邮件推送配置 (中国大陆用户推荐)
# ALICLOUD_ACCESS_KEY_ID=your-access-key-id
# ALICLOUD_ACCESS_KEY_SECRET=your-access-key-secret
# ALICLOUD_SENDER_EMAIL=your-verified@example.com
# ALICLOUD_SENDER_NAME=系统通知
# ALICLOUD_TAG_NAME=AutoScan 