# 服务器配置
PORT=5000
HOST=0.0.0.0

# MongoDB配置
MONGODB_URI=mongodb://username:password@localhost:27017/dbname
MONGODB_POOL_SIZE_MAX=10
MONGODB_POOL_SIZE_MIN=5
MONGODB_TIMEOUT_MS=30000
MONGODB_IDLE_TIME_MS=30000
MONGODB_QUEUE_TIMEOUT_MS=10000

# 日志配置
LOG_LEVEL=debug
LOG_FILE=auto_login.log

# 业务配置
INACTIVE_DAYS=12

# 文件清理配置
# 清理间隔，单位毫秒，0表示不自动清理
FILE_CLEANUP_INTERVAL=86400000
# 文件最大保存时间，单位毫秒，0表示永久保存
FILE_MAX_AGE=604800000 